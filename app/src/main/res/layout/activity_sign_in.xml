<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ly_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/theme_sign_in_background_color"
                android:layoutDirection="ltr">
    <android.support.v4.view.ViewPager
            android:id="@+id/vp_introduction"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_centerHorizontal="true"/>
    <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator_default"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/vp_introduction"
            android:layout_centerHorizontal="true"
            app:ci_drawable="@drawable/sign_in_circle_indicator"
            app:ci_drawable_unselected="@drawable/sign_in_circle_indicator"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_google_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator_default"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
