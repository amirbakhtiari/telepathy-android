<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/child_activity_size"
                android:layout_height="@dimen/child_activity_size"
                tools:context="com.atahani.telepathy.ui.EditUsernameActivity">
    <include
            android:id="@+id/default_toolbar"
            layout="@layout/default_toolbar"/>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_toolbar"
            android:layout_margin="@dimen/double_horizontal_margin"
            app:errorEnabled="true">
        <com.atahani.telepathy.ui.component.UsernameETX
                android:id="@+id/ext_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="20"
                android:hint="@string/hint_username"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
