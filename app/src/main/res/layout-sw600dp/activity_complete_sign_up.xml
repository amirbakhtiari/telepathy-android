<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ly_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            android:id="@+id/main_card_view"
            android:layout_width="@dimen/centered_card_view_width"
            android:layout_height="@dimen/centered_card_view_height"
            android:layout_centerInParent="true"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="4dp">
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View
                    android:id="@+id/header_view"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>
            <ImageView
                    android:id="@+id/im_image_profile"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/double_vertical_margin"/>
            <android.support.v4.widget.NestedScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/im_image_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/double_vertical_margin">
                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etx_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="160dp"
                        android:textCursorDrawable="@null"
                        android:maxLines="1"
                        android:lines="1"
                        android:hint="@string/hint_display_name"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textSize="@dimen/text_size_xx_large"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:drawableEnd="@mipmap/ic_mode_edit_white_24dp"
                        android:drawablePadding="@dimen/half_vertical_margin"/>
            </android.support.v4.widget.NestedScrollView>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/ry_choose_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_view"/>
            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_action_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/header_view"
                    android:src="@mipmap/ic_done_white_24dp"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp"
                    app:borderWidth="0dp"
                    style="@style/normal_fab_below_of_element_align_end"/>
            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_edit_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/header_view"
                    android:src="@mipmap/ic_photo_camera_white_24dp"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp"
                    app:borderWidth="0dp"
                    style="@style/normal_fab_below_of_element_align_start"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>